<configuration>

    <conversionRule conversionWord="coloredLevel" converterClass="com.lightbend.lagom.internal.logback.ColoredLevel"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{"yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",UTC} %coloredLevel %logger [%mdc] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ASYNCSTDOUT" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="STDOUT"/>
    </appender>

    <!-- Let us define some env vars -->
    <variable name="DEPLOYMENT_ENV" value="${DEPLOYMENT_ENV:-dev}"/>
    <variable name="LOG_LEVEL" value="${LOG_LEVEL:-DEBUG}"/>

    <appender name="ASYNCJSON" class="net.logstash.logback.appender.LoggingEventAsyncDisruptorAppender">
        <appender class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"team": "${TEAM_NAME}", "service": "${SERVICE_NAME}", "powered_by": "chiefofstate"}
                </customFields>
                <fieldNames>
                    <timestamp>timestamp</timestamp>
                </fieldNames>
            </encoder>
        </appender>
    </appender>

    <!-- Set logging for all Play library classes to INFO -->
    <logger name="play" level="${LOG_LEVEL}"/>
    <!-- Set logging for all Akka library classes to INFO -->
    <logger name="akka" level="${LOG_LEVEL}"/>
    <!-- Set logging for all Lagom library classes to INFO -->
    <logger name="com.lightbend.lagom" level="${LOG_LEVEL}"/>

    <!-- Cassandra and the datastax driver are used by the Lagom event sourcing modules -->
    <logger name="org.apache.cassandra" level="ERROR"/>
    <logger name="com.datastax.driver" level="ERROR"/>
    <!-- Turn down Kafka noise -->
    <logger name="org.apache.kafka" level="ERROR"/>
    <!-- Turn down Slick noise-->
    <logger name="scala.slick" level="ERROR"/>

    <variable name="ENV" value="${DEPLOYMENT_ENV:-dev}"/>
    <if condition='p("DEPLOYMENT_ENV").equals("dev")'>
        <then>
            <root level="${LOG_LEVEL}">
                <appender-ref ref="STDOUT"/>
            </root>
        </then>
        <else>
            <root level="${LOG_LEVEL}">
                <appender-ref ref="ASYNCJSON"/>
            </root>
        </else>
    </if>
</configuration>
